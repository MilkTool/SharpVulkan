<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);$(SharpVulkanPlatformDefine)</DefineConstants>
    <IntermediateOutputPath>obj\$(Configuration)\$(SharpVulkanPlatformName)\</IntermediateOutputPath>
    <OutputPath>bin\$(Configuration)\$(SharpVulkanPlatformName)\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>
</Project>
